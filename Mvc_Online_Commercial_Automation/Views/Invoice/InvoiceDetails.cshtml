@using Mvc_Online_Commercial_Automation.Models.Classes
@model List<InvoiceItem>
@{
    ViewBag.Title = "InvoiceDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>InvoiceDetails</h2>


@{
    ViewBag.Title = "DepartmentsDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<br />
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Detay Sayfası</li>
</ol>

<table class="table table-bordered">

    <tr>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Description</td>
            <td>@item.Amount adet</td>
            <td>@item.UnitPrice ₺</td>
            <td>@item.TotalPrice ₺</td>
        </tr>
    }
</table>
<a href="/Invoice/NewInvoiceItem/" class="btn btn-outline-success"> Yeni Kalem Girişi Ekle</a>





