@model Mvc_Online_Commercial_Automation.Models.Classes.SalesTransaction
@{
    ViewBag.Title = "SaleAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<br />
<h2>Yeni Satış Sayfası</h2>
<br />
<form method="post" class="form form-group">

    <div class="form form-group">
        @Html.LabelFor(x => x.CariID)
        <br />
        @Html.DropDownListFor(x => x.CariID, (List<SelectListItem>)ViewBag.cariList, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.EmployeeID)
        <br />
        @Html.DropDownListFor(x => x.EmployeeID, (List<SelectListItem>)ViewBag.employeeList, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.ProductID)
        <br />
        @Html.DropDownListFor(x => x.ProductID, (List<SelectListItem>)ViewBag.productList, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Date)
        <br />
        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Quantity)
        <br />
        @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Price)
        <br />
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.TotalPrice)
        <br />
        @Html.TextBoxFor(x => x.TotalPrice, new { @class = "form-control" })
        <br />
    </div>
    <br />
    <button class="btn btn-success">Kaydet</button>


</form>





