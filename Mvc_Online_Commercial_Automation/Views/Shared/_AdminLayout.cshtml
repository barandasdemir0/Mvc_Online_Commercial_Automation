                            <div class="sb-nav-link-icon"><i class="fas fa-gift"></i></div>
                            Giderler
                        </a>
                        <a class="nav-link" href="/Product/ListProduct/">
                            <div class="sb-nav-link-icon"><i class="fas fa-print"></i></div>
                            PDF ~ EXCEL
                        </a>
                        <a class="nav-link" href="/Alert/Index/">
                            <div class="sb-nav-link-icon"><i class="fas fa-box"></i></div>
                            Alert
                        </a>
                        <a class="nav-link" href="/Static/Index/">
                            <div class="sb-nav-link-icon"><i class="fas fa-database"></i></div>
                            İstatistikler
                        </a>
                        <a class="nav-link" href="/Gallery/Index/">
                            <div class="sb-nav-link-icon"><i class="fas fa-camera"></i></div>
                            Galeri
                        </a>
                        <a class="nav-link" href="/ProductDetails/Index/">
                            <div class="sb-nav-link-icon"><i class="fas fa-university"></i></div>
                            Ürün Detay
                        </a>

                        @if (User.IsInRole("A"))
                        {
                            <a class="nav-link" href="/Static/EasyTable/">
                                <div class="sb-nav-link-icon"><i class="fas fa-signal"></i></div>
                                Hızlı Bakış Tabloları
                            </a>
                        }





                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Aktif Olan Kullanıcı:</div>
                    @HttpContext.Current.User.Identity.Name
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Baran Daşdemir @DateTime.Now.Year</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Web/dist/js/scripts.js"></script>
</body>
</html>
