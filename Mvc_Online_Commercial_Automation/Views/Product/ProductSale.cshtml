@model Mvc_Online_Commercial_Automation.Models.Classes.SalesTransaction
@{
    ViewBag.Title = "ProductSale";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<br />
<h2>Satış Sayfası</h2>
<br />
<form method="post" class="form form-group">

    <div class="form form-group">
        @Html.LabelFor(x => x.ProductID)
        <input type="text" name="ProductID" value="@ViewBag.productid" class="form-control" readonly />
        <br />
        @Html.LabelFor(x => x.EmployeeID)
        @Html.DropDownListFor(x => x.EmployeeID, (List<SelectListItem>)ViewBag.employeeList, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.CariID)
        @Html.TextBoxFor(x => x.CariID, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Quantity)
        <input type="number" class="form-control" max="10" min="0" placeholder="adet girin" id="txt1" onchange="sum();" name="Quantity" />

        @*@Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })*@
        <br />
        @Html.LabelFor(x => x.Price)
        <input type="text" name="Price" value="@ViewBag.price" class="form-control" id="txt2" onkeyup="sum();" />
        <br />
        @Html.LabelFor(x => x.TotalPrice)
        <input type="text" name="TotalPrice" value="0" class="form-control" id="txt3" readonly />

        @*@Html.TextBoxFor(x => x.TotalPrice, new { @class = "form-control" })*@
        <br />

    </div>
    <br />
    <button class="btn btn-success">Satış Yap</button>



</form>



@*<input type="text" id="txt1" onkeyup="sum();" />*@
@*<input type="text" id="txt2" onkeyup="sum();" />*@
@*<input type="text" id="txt3"  />*@
<script>
    function sum() {
        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);  
        if (!isNaN(sonuc)) {
            document.getElementById('txt3').value = sonuc;
        }
    }
</script>


