@model Mvc_Online_Commercial_Automation.Models.Classes.Product
@{
    ViewBag.Title = "ProductUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<h2>Ürün Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("ProductUpdate", "Product", FormMethod.Post))
{
    <div class="form form-group">
        @Html.HiddenFor(x=>x.ProductID)
        @Html.LabelFor(x => x.ProductName)
        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.BrandName)
        @Html.TextBoxFor(x => x.BrandName, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Stock)
        @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.PurchasePrice)
        @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.SalePrice)
        @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Status)
        @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.ProductImage)
        @Html.TextBoxFor(x => x.ProductImage, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.CategoryID)
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.deger1, new { @class = "form-control" })
        <br />

    </div>
    <br />
    <br />
    <button class="btn btn-outline-warning">Güncelle</button>
}








